<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/normalize.css" />
    <link rel="stylesheet" href="/skeleton.css" />

    <title>Index Page</title>
  </head>
  <body>
    <div class="container">
      <h1>Budgtr</h1>
      <button><a href="/budgets/new">New</a></button>
      <table>
        <% for (i=0; i < budget.length; i++) { %>

        <tr>
          <td><%= `${budget[i].date}` %></td>
          <% let pathForOneBudgetItem = "/budgets/" + `${i}` %>
          <td>
            <a href="<%=`${pathForOneBudgetItem}` %>"
              ><%= `${budget[i].name}` %>
            </a>
          </td>
          <td><%= `${budget[i].amount}`%></td>
        </tr>

        <%}%>
      </table>
    </div>
  </body>
</html>
